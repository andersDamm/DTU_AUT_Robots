<?xml version="1.0" ?>
<!--
    Configuration file for 
    Simulator Server
-->

<simserver>
  <!-- *** Core Components Configuration *** -->
  <!-- Sheduler configuration -->
  <scheduler>
    <period value="10000"/><!--in usec-->
  </scheduler>
  
  <!-- Simulator configuration -->
  <simstage>
    <world file="track.world"/>
  </simstage>
  
  <!-- Robot server no. 0 -->
